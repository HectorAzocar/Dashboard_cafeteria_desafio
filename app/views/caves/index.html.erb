<p id="notice"><%= notice %></p>

<h1>Cafe</h1>

<%= column_chart @caves.pluck(:blend_name, :price), title: 'stock productos', xtitle: 'productos', ytitle: 'cantidad', colors: ['#ff7557'], messages: {empty: 'no hay productos aun',}  %>

<%#= line_chart datos.map { |data| data} %>
<table>
  <thead>
    <tr>
      <th>Blend name</th>
      <th>Origin</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caves.each do |cafe| %>
      <tr>
        <td><%= cafe.blend_name %></td>
        <td><%= cafe.origin %></td>
        <td><%= cafe.price %></td>
        <td><%= link_to 'Show', cafe %></td>
        <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
        <td><%= link_to 'Destroy', cafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cafe', new_cafe_path %>

